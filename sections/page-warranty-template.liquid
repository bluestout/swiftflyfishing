{% if section.settings.image != blank %}
  <header class="banner center page-banner dark-overlay-{{ section.settings.image_darken }}">
    {% render 'image-element',
            image: section.settings.image,
            alt: section.settings.image.alt,
            stretch_width: true,
            progressive: true
    %}
    <div class="caption captionOverlay--true">
      {% if section.settings.icon != blank %}
        <div class="icon center">
          {{ section.settings.icon }}
        </div>
      {% endif %}
      <h1 class="headline">{{ section.settings.title }}</h1>
      <p class="subtitle">{{ section.settings.sub_title }}</p>
    </div>
    <div class="badges">
      <a class="badge-item">{{section.settings.icon_1}}</a>
      <a class="badge-item">{{section.settings.icon_2}}</a>
      <a class="badge-item">{{section.settings.icon_3}}</a>
      <a class="badge-item">{{section.settings.icon_4}}</a>
    </div>
  </header>
{% endif %}

{% for block in section.blocks %}
  <div {{ block.shopify_attributes }} class="block__{{ block.type }} block__{{ block.id }}
    {% if block.type == "featured_collection" %} featured-collection-section{% endif %}">
    {% if block.type == 'image-text' %}
      {% include 'include-image-text' %}
    {% elsif block.type == "divider" %}
      {% include 'include-divider', type: 'block' %}
    {% elsif block.type == "image-overlay" %}
      {% include 'include-image-with-text-overlay' type: "block" %} 
    {% endif %}
  </div>
{% endfor %}
<div class="page-content">
  <ul class="toggle-list">
    {% assign page_str = section.settings.content | replace: '<p><strong>', '</div></li><li><a class="toggle_btn">' | replace: '</strong></p>', '</a><div class="toggle_content">' %}
    {% assign page_content = page_str | remove_first: '</div></li>' %}
    {{ page_content }}
  </ul>
</div>
