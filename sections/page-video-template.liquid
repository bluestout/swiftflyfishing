{% if section.settings.banner_status and section.settings.image %}
  <header class="banner center page-banner dark-overlay-{{ section.settings.image_darken }}">
    {% render 'image-element',
            image: section.settings.image,
            alt: section.settings.image.alt,
            stretch_width: true,
            progressive: true
    %}
    <div class="caption captionOverlay--true">
      <h1 class="headline {%if section.settings.title_uppercase %}uppercase{%endif%}">{{ page.title }}</h1>
      {{ section.settings.content }}
      <a class="button button-white small-button" href="http://swiftflyfishing.com/products/casts-that-catch-fish">{{section.settings.button_title}}</a>
      {{ section.settings.botton_text }}
    </div>    
  </header>
{% endif %}

<div class="main content">
  <div class="container flex">
    {% for block in section.blocks %}
      {% if block.type == 'divider' %}
        {% include 'include-divider', type: 'block' %}
      {% endif %}
      {% if block.type == 'heading' %}
        <div class="one-whole columns heading">
          <h3>{{block.settings.title}}</h3>
          {{ block.settings.text }}
        </div>
      {% endif %}
      {% if block.type == 'video_block' %}
        <div class="one-third medium-down--whole columns video-block">
          <a target="_blank" href="{{ block.settings.video_link }}" title="{{ block.settings.title | escape }}">
            {% render 'image-element',
                    image: block.settings.image,
                    alt: block.settings.title
            %}
          </a>
          <p class="article__title">{{ block.settings.title }}</p>
          <div class="excerpt"> {{ block.settings.description }}</div>
          <div class="action-bottom">
            <a class="video_btn" target="_blank" href="{{block.settings.video_link}}">{% include 'icon-pack' with icon: 'play' %}</a>
            <a class="detail_btn" target="_blank" href="{{ block.settings.detail_link }}">Read more</a>
            <a class="download_btn" target="_blank" href="{{block.settings.download_link}}">Free download</a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
      
  </div>
</div>


{% schema %}
{
  "name": "Video Page section",
  "class": "page-section video-section",
  "settings": [
    {
      "type": "header",
      "content": "Banner"
    },
    {
      "type": "checkbox",
      "id": "banner_status",
      "label": "Banner status"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image"
    },
    {
      "type": "checkbox",
      "id": "title_uppercase",
      "label": "Title uppercase"
    },
    {
      "type": "checkbox",
      "id": "image_darken",
      "label": "Image darken status"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content text"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button title",
      "default": "Buy DVD"
    },
    {
      "type": "richtext",
      "id": "botton_text",
      "label": "Botton content"
    }
  ],
  "blocks": [
    {
      "type": "divider",
      "name": "Divider",
      "settings": [
        {
          "type": "range",
          "id": "divider_spacing",
          "min": 0,
          "max": 30,
          "step": 5,
          "unit": "px",
          "label": "Space",
          "default": 20
        },
        {
          "type": "checkbox",
          "id": "divider_border",
          "label": "Show border",
          "default": false
        }
      ]
    },
    {
      "type": "video_block",
      "name": "Video block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "video_link",
          "label": "Video link"
        },
        {
          "type": "url",
          "id": "detail_link",
          "label": "Detail link"
        },
        {
          "type": "url",
          "id": "download_link",
          "label": "Download link"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}