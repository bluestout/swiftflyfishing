      ]
    },
    {
      "type": "divider",
      "name": "Divider",
      "settings": [
        {
          "type": "range",
          "id": "divider_spacing",
          "min": 0,
          "max": 30,
          "step": 5,
          "unit": "px",
          "label": "Space",
          "default": 20
        },
        {
          "type": "checkbox",
          "id": "divider_border",
          "label": "Show border",
          "default": false
        }
      ]
    },
    {
      "type": "image-overlay",
      "name": "Image overlay",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image"
        },
        {
          "type": "html",
          "id": "icon_1",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "icon_2",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "icon_3",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "icon_4",
          "label": "Icon"
        }
      ]
    }
  ]
}
{% endschema %}