    },
    {
      "type": "html",
      "id": "icon_1",
      "label": "Icon"
    },
    {
      "type": "html",
      "id": "icon_2",
      "label": "Icon"
    },
    {
      "type": "html",
      "id": "icon_3",
      "label": "Icon"
    },
    {
      "type": "html",
      "id": "icon_4",
      "label": "Icon"
    },
    {
      "type": "header",
      "content": "content"
    },
    {
      "type": "image_picker",
      "id": "block_image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "block_title",
      "label": "Heading",
      "default": "Meet the team"
    },
    {
      "type": "richtext",
      "id": "block_text",
      "label": "Text",
      "default": "<p>Say a little something about your team here, tell the story of how you got together, describe what roles people play, and help your customers get to know you better! All your staff members can be listed below, with their respective photos, job titles, descriptions or mini-bios, and Twitter handles.</p>"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text alignment",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Employees"
    },
    {
      "type": "range",
      "id": "employee_per_row",
      "label": "Images per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "color",
      "id": "member_color",
      "label": "Text",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "member_accent_color",
      "label": "Accent",
      "default": "#d54d4d"
    },
    {
      "type": "color",
      "id": "member_overlay_color",
      "label": "Overlay",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "name": "Employee",
      "type": "employee",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "800 x 800px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
