.flickity-prev-next-button {
  opacity: 1;
  position: inherit;
  padding: 0;
  width: 40px;
  background: transparent!important;
  svg{
    width: 100%;
    height: 100%;
    transform: none;
    position: relative;
    path{
      fill: {{ settings.arrow_color }}
    }
  }
  .arrow{
    left: 0;
    top: 50%;
    opacity: 1;
  }
  &.previous{
    svg{
      .arrow{
        transform: translate(19%, 19%);
      }
    }
  }
  &.next{
    svg{
      .arrow{
        transform: rotate(180deg) translate(-82%, -83%);
      }
    }
  }
}

.flickity-enabled {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  .flickity-viewport{
    width: 100%;
    order: 1;
  }
  .previous{
    order: 2;
    margin-left: auto;
  }
  .next{
    order: 4;
    margin-right: auto;
  }
  .flickity-page-dots{
    display: flex!important;
    align-items: center;
    justify-content: center;
    order: 3;
    position: initial;
    width: auto;
    transform: none;
    .dot{
      height: 4px!important;
      width: 4px!important;
      margin: 0!important;
      background: black!important;
      margin-left: 5px!important;
      border-radius: 50%!important;
      opacity: 1!important;
      &.is-selected{
        width: 6px!important;
        height: 6px!important;
        background-color: $color-red!important;
      }
    }
  }
}

