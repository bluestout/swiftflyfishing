.account-section{
  .page-banner{
    .caption{
      @include respond-to("medium-down"){
        position: absolute;
        top: 50%;
        transform: translate(0, -50%);
        background: transparent;
        h1{
          color: $color-white;
          @include font-MontBold();
          font-size: 20px;
        }
      }
    }
  }
  .container{
    margin-top: 50px;
    @include respond-to("medium-down"){
      margin-top: 0;
    }
    .account-sidebar {
      .select-box-menu{
        list-style: none;
        padding: 0;
        @include respond-to('medium-down'){
          background-color: $color-white;
          width: 100%;
          position: relative;
          padding-top: 65px!important;
          display: table;
          margin-top: -30px;
          margin: -30px -20px 20px;
          width: calc(100% + 40px);
          .active{
              position: absolute;
              top: 0;
              width: 100%;
          }
        }
        li{
          @include respond-to('medium-down'){
            display: none;
            padding: 0 10px;
            margin: 0;
            width: 100%;
            border: none;
            border-bottom: 1px solid $color-lightgrey;
        }
        a{
            @include respond-to('medium-down'){
              font-size: $font-desc;
              padding: 10px;
              display: block;
              font-size: $font-desc;
              margin: 10px;
              text-align: left;
              color: $color-black;
              @include font-LatoRegular();
              text-transform: uppercase;
              letter-spacing: 2px;
            }
          }
          &.show{
            &::after{
                transform: rotate(-135deg) translate(50%, 50%);
                top: 50%;
            }
          }
          &.active{
            @include respond-to("medium-down"){
              background-color: $color-blue;
              display: block!important;
              &::after{
                  content: " ";
                  position: absolute;
                  top: 50%;
                  right: 20px;
                  font-family: monospace;
                  transform: rotate(45deg) translate(-50%, -50%);
                  color: $color-white;
                  width: 8px;
                  height: 8px;
                  border: 2px solid $color-white;
                  border-top: 0;
                  border-left: 0;
              }
            }
            a{
              @include font-LatoBold();
              @include respond-to("medium-down"){
                color: $color-white;
                @include font-LatoRegular();
                text-transform: uppercase
              }
            }
          }
        }
      }
    }
    .account-main{
      padding-bottom: 50px;
      border: none;
      h4{
        border-bottom: 1px solid $color-dirtywhite;
        padding-bottom: 10px;
        @include respond-to("medium-down"){
          font-size: $font-small;
          @include font-MontSBold();
          margin-bottom: 20px;
        }
        &.heading-title{
          margin-bottom: 0;
          display: flex;
          align-items: center;
          justify-content: space-between;
          @include font-MontSBold();
          text-transform: uppercase;
        }
      }
      .heading{
        border-bottom: 1px solid $color-dirtywhite;
        align-items: center;
        margin-bottom: 20px;
        cursor: pointer;
        &::after{
          content: "---";
          letter-spacing: -2px;
          font-family: auto;
          font-size: 20px;
        }
        &.active{
          &::after{
            content: "+";
            letter-spacing: 0;
          }
        }
        h4{
          border-bottom: none;
          margin-bottom: 0;
        }
        .errors{
          margin: auto;
          margin-right: 50px;
          p{
            margin-bottom: 0;
            color: $color-red;
          }
        }
      }
      max-width: 1200px;
      table{
        tr{
          border-top: none!important;
          @include respond-to("medium-down"){
            border: none!important;
            border-bottom: 1px solid $color-dirtywhite!important;
            padding-bottom: 20px!important;
          }
          th{
            @include font-MontSBold();
            font-size: $font-desc;
          }
          td, th  {
            background-color: white!important;
            border: none!important;
            @include respond-to("medium-down"){
              text-align: right;
              &::before{
                text-align: left;
              }
              &::after{
                border: none!important;
                background: white!important;
              }
            }
          }
        }
      }
      .address_actions{
          span a{
            color: $color-red;
          }
      }
      .action_delete{
        margin-left: 10px;
      }
      #order-details{
        td, th{
          text-align: center;
          &:last-child{
            text-align: right;
          }
        }
        thead{
          tr{
            border-bottom-color: $color-dirtywhite;
            th{
              text-transform: uppercase;
            
            }
          }
        }
        tbody{
          tr{
            border-bottom-color: $color-dirtywhite;
            &:last-child{
              border-bottom: none!important;
            }
            
            td{
              &[data-label="Product"]{
                max-width: 200px;
                height: 120px;
                padding: 20px;
                @include respond-to("medium-down"){
                  max-width: 100%;
                  padding: 10px 0;
                  height: 80px;
                  &::after, &::before{
                    content: none;
                  }
                }

              }
              .order-details__product{
                display: flex;
                align-items: center;
                @include respond-to("medium-down"){
                  width: 100%;
                }
                .image-element__wrap{
                  max-width: 70px;
                  width: 100%;
                  margin-right: 10px;
                }
                a{
                  width: 100%;
                  @include respond-to("medium-down"){
                    text-align: left;
                  }
                }
              }
            }
          }
        }
        
        tfoot{
          tr{
            border: none!important;
            td{
              text-align: right;
              height: 55px;
              background-color: #F5F5F5!important;
              @include respond-to("medium-down"){
                &::after{
                  background: #F5F5F5!important;
                }
              }
              strong{
                text-transform: uppercase;
                @include font-MontSBold();
                font-size: $font-desc;
              }
              
            }
          }
        }
      }
      #address_tables{
        margin-top: 10px;
      }
    }
    
  }
}

